{
  "name": "zenta",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "start": "turbo start",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@configs/eslint-config": "*",
    "@configs/tsconfig": "*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.4",
  "workspaces": [
    "apps/*",
    "configs/*",
    "packages/*"
  ],
  "eslintConfig": {
    "extends": [
      "@configs/eslint-config/base",
      "@configs/eslint-config/react"
    ]
  },
  "prettier": "@configs/prettier-config"
}
