{
  "extends": "@configs/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    ".",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/components",
    "src/custom.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}